---
import FormattedDate from "../../components/FormattedDate.astro";
import MyImage from "../../components/MyImage.astro";
import VideoCard from "../../components/VideoCard.astro";
import Prose from "../../components/Prose.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { hygraphFetch } from "../../lib/hygraph";
import { SINGLE_POST_QUERY } from "../../lib/queries";

export async function getStaticPaths() {
  const query = /* GraphQL */ `
    query GetPaths {
      blogPosts {
        slug
      }
    }
  `;
  const data = await hygraphFetch(query);
  const posts = data.blogPosts || [];
  return posts.map((post: any) => ({ params: { slug: post.slug } }));
}

const { slug } = Astro.params;
const data = await hygraphFetch(SINGLE_POST_QUERY, { slug });
const post = data?.blogPost;

if (!post) return Astro.redirect("/404");

const settings = data.globalSettings?.[0] || {};
const relatedPosts = data.allPosts
  ?.filter((p: any) => p.slug !== slug)
  .slice(0, 3);
---

<BaseLayout
  settings={settings}
  pageSeo={post.seo}
  globalSeo={settings.seo}
  fallbackTitle={post.title}
>
  <main class="bg-white min-h-screen antialiased">
    <div class="pt-8 px-4 max-w-6xl mx-auto pb-8">
      {/* --- HERO / HEADER --- */}
      <div
        class="mb-12 lg:mb-20 grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-center"
      >
        <header class="col-span-1 lg:col-span-7">
          <span
            class="text-sm font-medium text-slate-500 uppercase tracking-widest"
          >
            <FormattedDate date={new Date(post.publishedDate)} />
          </span>
          <div class="py-3">
            {
              post.blogCategory && (
                <a
                  href={`/blogCategory/${post.blogCategory.slug}`}
                  class="inline-block text-xs font-bold tracking-wider px-3 py-1 rounded-full bg-indigo-50 text-indigo-700 hover:bg-indigo-100 transition-colors uppercase"
                >
                  {post.blogCategory.displayName}
                </a>
              )
            }
          </div>
          <h1
            class="text-4xl lg:text-5xl font-medium text-slate-900 leading-tight"
          >
            {post.title}
          </h1>
          {
            post.excerpt && (
              <p class="mt-6 text-xl text-slate-600 italic leading-relaxed">
                {post.excerpt}
              </p>
            )
          }
        </header>

        <div class="hidden lg:block col-span-1 lg:col-span-5">
          <MyImage
            src={post.coverImage}
            alt={post.coverImage.altText || post.title}
            width={post.coverImage.width}
            height={post.coverImage.height}
            loading="eager"
            aspect="dynamic"
            class="rounded-3xl shadow-2xl rotate-1 lg:rotate-2 hover:rotate-0 transition-transform duration-500"
          />
        </div>
      </div>

      {/* --- ARTIKELINNEHÅLL --- */}
      <div class="max-w-5xl">
        <Prose>
          <div set:html={post.content.html} />
        </Prose>

        {/* --- VIDEOSEKTION --- */}
        {
          post.video && (
            <div class="mt-4 pt-8 border-t border-slate-300 max-w-2xl">
              {post.video.title && (
                <h2 class="text-2xl font-medium  text-slate-900">
                  {post.video.title}
                </h2>
              )}
              {post.video.videoText && (
                <div class="mt-4 ">
                  <p class="text-lg text-slate-700 leading-relaxed  font-medium">
                    {post.video.videoText}
                  </p>
                </div>
              )}
              <div class="mt-6 rounded-3xl overflow-hidden shadow-2xl bg-black">
                <VideoCard
                  videoUrl={post.video.videoUploadedUrl?.url}
                  poster={post.video.thumbnail}
                  videoStyle="defaultLayout"
                />
              </div>
            </div>
          )
        }
      </div>

      {/* --- RELATERADE INLÄGG (FOOTER SECTION) --- */}
      {
        relatedPosts && relatedPosts.length > 0 && (
          <footer class="mt-12 pt-8 border-t border-slate-300 max-w-5xl mx-auto">
            <div class="flex items-center justify-between mb-8">
              <h2 class="text-3xl font-bold text-slate-900">Fler artiklar</h2>
              <a
                href="/blog"
                class="text-indigo-600 font-semibold hover:underline"
              >
                Se alla →
              </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {relatedPosts.map((rel: any) => (
                <a
                  href={`/blog/${rel.slug}`}
                  class="group flex flex-col bg-white border border-slate-100 rounded-3xl p-6 shadow-sm transition-all hover:shadow-xl hover:-translate-y-2"
                >
                  <span class="text-xs font-bold text-indigo-500 mb-2 uppercase tracking-tight">
                    <FormattedDate date={new Date(rel.publishedDate)} />
                  </span>
                  <h3 class="text-xl font-bold text-slate-900 group-hover:text-indigo-600 transition-colors mb-3">
                    {rel.title}
                  </h3>
                  <p class="text-slate-600 line-clamp-3 text-sm leading-relaxed mb-4">
                    {rel.excerpt}
                  </p>
                  <span class="mt-auto text-sm font-bold text-slate-400 group-hover:text-indigo-500 transition-colors">
                    Läs mer →
                  </span>
                </a>
              ))}
            </div>
          </footer>
        )
      }
    </div>
  </main>
</BaseLayout>
