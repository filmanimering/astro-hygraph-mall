---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { hygraphFetch } from "../../lib/hygraph";
import { BLOG_LIST_QUERY } from "../../lib/queries"; // Importera den centrala queryn
import MyBlogPost from "../../components/MyBlogPost.astro";
import BlogCatMeny from "../../components/BlogCatMeny.astro";

const data = await hygraphFetch(BLOG_LIST_QUERY);
const posts = data.blogPosts || [];
const categories = data.blogCategories || []; // Hämta bloggkategorierna här
const settings = data.globalSettings?.[0] || {};
const { slug } = Astro.params;
---

<BaseLayout
  globalSeo={settings.seo}
  fallbackTitle={`Blogg | ${settings.siteName}`}
  settings={settings}
>
  <main class="px-4 w-full antialiased">
    <div class="max-w-7xl mx-auto pt-2">
      <BlogCatMeny categories={categories} slug={slug} />

      <div
        class="mt-8 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8"
      >
        {
          posts.map((post: any) => (
            <MyBlogPost
              title={post.title}
              slug={post.slug}
              excerpt={post.excerpt}
              poster={post.coverImage}
              date={post.publishedDate}
              bloggKategori={post.blogCategory}
            />
          ))
        }
      </div>
    </div>
    <div class="h-24"></div>
  </main>
</BaseLayout>
