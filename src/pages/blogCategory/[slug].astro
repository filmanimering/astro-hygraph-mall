---
import FormattedDate from "../../components/FormattedDate.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import MyImage from "../../components/MyImage.astro";
import { hygraphFetch } from "../../lib/hygraph";
// Vi använder din CATEGORY_POST_QUERY (se till att den finns i lib/queries.js)
import { CATEGORY_POSTS_QUERY } from "../../lib/queries";
import MyBlogPost from "../../components/MyBlogPost.astro";
import MyButton from "../../components/MyButton.astro";

// 1. Berätta för Astro vilka sidor som ska skapas (Animation, Hemsidor etc.)
export async function getStaticPaths() {
  const data = await hygraphFetch(`
    query GetBlogCategories {
      blogCategories {
        slug
        displayName
      }
    }
  `);

  return data.blogCategories.map((cat: any) => ({
    params: { slug: cat.slug },
    props: { category: cat },
  }));
}

const { category } = Astro.props as any;
const { slug } = Astro.params;

// 2. Hämta inlägg för just denna kategori + globala inställningar
const data = await hygraphFetch(CATEGORY_POSTS_QUERY, { slug });

const posts = data.blogPosts || [];
const settings = data.globalSettings?.[0] || {};
---

<BaseLayout
  globalSeo={settings.seo}
  fallbackTitle={`${category.displayName} | ${settings.siteName}`}
  settings={settings}
>
  <main class="px-4 w-full antialiased">
    <div class="max-w-7xl mx-auto pt-2">
      <header class="mb-12 border-b border-gray-400 pb-4">
        <h1 class="text-2xl md:text-3xl font-medium">
          Kategori: <span class="text-green-700">{category.displayName}</span>
        </h1>
      </header>

      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-10 gap-y-10"
      >
        {
          posts.map((post: any) => (
            <MyBlogPost
              title={post.title}
              slug={post.slug}
              excerpt={post.excerpt}
              poster={post.coverImage}
              date={post.publishedDate}
              bloggKategori={post.blogCategory}
            />
          ))
        }
      </div>

      {
        posts.length === 0 && (
          <div class="py-24 text-center">
            <p class="text-slate-500 text-lg">Här fanns det inga inlägg än.</p>
            <a
              href="/blog"
              class="text-slate-900 font-bold underline mt-4 inline-block"
            >
              Se allt i bloggen
            </a>
          </div>
        )
      }

      <div class="mt-12">
        <MyButton
          titel="← Tillbaka till alla inlägg"
          link="/blog"
          variant="primary"
        />
      </div>
    </div>
    <div class="h-24"></div>
  </main>
</BaseLayout>
