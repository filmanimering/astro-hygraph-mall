---
import FormattedDate from "../../components/FormattedDate.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import MyImage from "../../components/MyImage.astro";
import { hygraphFetch } from "../../lib/hygraph";
// Vi använder din CATEGORY_POST_QUERY (se till att den finns i lib/queries.js)
import { CATEGORY_POSTS_QUERY } from "../../lib/queries";

// 1. Berätta för Astro vilka sidor som ska skapas (Animation, Hemsidor etc.)
export async function getStaticPaths() {
  const data = await hygraphFetch(`
    query GetBlogCategories {
      blogCategories {
        slug
        displayName
      }
    }
  `);

  return data.blogCategories.map((cat: any) => ({
    params: { slug: cat.slug },
    props: { category: cat },
  }));
}

const { category } = Astro.props as any;
const { slug } = Astro.params;

// 2. Hämta inlägg för just denna kategori + globala inställningar
const data = await hygraphFetch(CATEGORY_POSTS_QUERY, { slug });

const posts = data.blogPosts || [];
const settings = data.globalSettings?.[0] || {};
---

<BaseLayout
  globalSeo={settings.seo}
  fallbackTitle={`${category.displayName} | ${settings.siteName}`}
  settings={settings}
>
  <main class="px-4 w-full antialiased">
    <div class="max-w-7xl mx-auto pt-10 md:pt-20">
      <header class="mb-12 border-b border-slate-100 pb-8">
        <h1 class="text-4xl md:text-6xl font-medium text-slate-900">
          {category.displayName}
        </h1>
        <p class="text-slate-500 mt-4 italic">
          Visar alla projekt och inlägg inom {
            category.displayName.toLowerCase()
          }.
        </p>
      </header>

      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-10 gap-y-10"
      >
        {
          posts.map((post: any) => (
            <article class="flex flex-col">
              <a
                href={`/blog/${post.slug}`}
                class="block no-underline grow group"
              >
                <div class="bg-[#F6F8F9] hover:scale-102 transition-transform duration-300 rounded-2xl h-full flex flex-col">
                  <div class="mb-2 overflow-hidden rounded-t-2xl">
                    <MyImage
                      src={post.coverImage?.url || "/default-og-image.jpg"}
                      alt={post.title || "Poster bild"}
                      aspect="video"
                      class="w-full h-auto"
                    />
                  </div>

                  <div class="flex flex-col px-4 pt-2 pb-4">
                    <div class="text-xs font-bold uppercase tracking-widest text-slate-500">
                      <FormattedDate date={new Date(post.publishedDate)} />
                    </div>
                    <h2 class="mt-1 text-xl leading-tight text-slate-900">
                      {post.title}
                    </h2>

                    {post.excerpt && (
                      <p class="mt-1 text-sm leading-relaxed text-slate-600 line-clamp-3">
                        {post.excerpt}
                      </p>
                    )}
                  </div>
                </div>
              </a>
            </article>
          ))
        }
      </div>

      {
        posts.length === 0 && (
          <div class="py-24 text-center">
            <p class="text-slate-500 text-lg">Här fanns det inga inlägg än.</p>
            <a
              href="/blog"
              class="text-slate-900 font-bold underline mt-4 inline-block"
            >
              Se allt i bloggen
            </a>
          </div>
        )
      }

      <div class="mt-20">
        <a
          href="/blog"
          class="text-sm font-bold uppercase tracking-widest text-slate-400 hover:text-slate-900 transition-colors"
        >
          ← Tillbaka till alla inlägg
        </a>
      </div>
    </div>
    <div class="h-24"></div>
  </main>
</BaseLayout>
