---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

// Vi tar emot de nya propsen h√§r
const { pageSeo, globalSeo, fallbackTitle, settings } = Astro.props;
---

<html lang="sv" class="scroll-smooth">
  <head>
    <BaseHead
      pageSeo={pageSeo}
      globalSeo={globalSeo}
      fallbackTitle={fallbackTitle}
    />
  </head>

  <body
    class="bg-white antialiased text-slate-900 flex flex-col min-h-screen font-sans"
  >
    <Header settings={settings} />

    <main class="w-full mx-auto grow">
      <slot />
    </main>

    <Footer settings={settings} />
  </body>
</html>
