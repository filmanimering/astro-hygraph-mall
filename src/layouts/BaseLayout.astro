---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/700.css";

const { pageSeo, globalSeo, fallbackTitle, settings } = Astro.props;
---

<html lang="sv" class="scroll-smooth">
  <head>
    <BaseHead
      pageSeo={pageSeo}
      globalSeo={globalSeo}
      fallbackTitle={fallbackTitle}
    />
  </head>

  <body
    class="text-slate-800 bg-slate-50 flex flex-col min-h-screen font-sans max-w-400 mx-auto"
  >
    <Header settings={settings} />

    <main class="w-full mx-auto grow min-h-screen bg-slate-50">
      <slot />
    </main>

    <Footer settings={settings} />
  </body>
</html>
