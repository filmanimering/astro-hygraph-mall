---
import LinkExternal from "./ikonerSvg/LinkExternal.astro";
interface Props {
  titel: string;
  link: string;
  target_link?: "_self" | "_blank";
  solid?: boolean;
  fullWidth?: boolean;
}

const {
  titel,
  link,
  target_link = "_self",
  solid = false,
  fullWidth = false,
} = Astro.props as Props;

// Tailwind-klasser
const solidClass = `
  bg-blue-900 text-gray-100
  hover:opacity-80
  py-1 px-2 sm:py-3 sm:px-4
  rounded-xl
  text-xs sm:text-sm font-semibold
  focus:outline-none
  
`;

const transparentClass = `
  bg-transparent text-gray-100 border-2 border-white/50
  py-2 px-3 sm:py-3 sm:px-4
  rounded-xl
  text-base  
  focus:outline-none
  hover:bg-white/10
  hover:border-white/60
`;

// Bredd
const widthClass = fullWidth ? "w-full flex justify-center" : "inline-flex";

// Visa ikon vid extern l√§nk
const isExternal = target_link === "_blank";

// Slutliga klasser
const classes = `
  ${solid ? solidClass : transparentClass}
  ${widthClass}
  items-center gap-2
  transition-all duration-300
`.trim();
---

<a
  href={link}
  target={target_link}
  rel={isExternal ? "noopener noreferrer" : undefined}
  class={classes}
  aria-label={titel}
>
  <span class="text-sm">{titel}</span>

  {isExternal && <LinkExternal />}
</a>
