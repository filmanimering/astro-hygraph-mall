---
const {
    label,
    url,
    bgColor = "bg-amber-900",
    textColor = "text-gray-100",
    fullWidth = false,
} = Astro.props;
---

<a href={url} class="no-underline">
    <div
        class={`border-2  border-gray-800/10 ${textColor} ${bgColor} hover:opacity-80 py-2 px-4 rounded-2xl w-fit ${fullWidth ? "w-full text-center" : ""} `}
    >
        {label}
    </div>
</a>
