---
// MyButton.astro
const {
  label,
  url,
  // Standardf채rgen h채mtas nu fr책n v책r globala variabel via Tailwind v4-syntax
  bgColor = "bg-(--brand-primary)",
  textColor = "text-white",
  fullWidth = false,
} = Astro.props;
---

<a
  href={url}
  class="no-underline group inline-block w-fit ${fullWidth ? 'w-full' : ''}"
>
  <div
    class:list={[
      "border-2 border-black/5 transition-all duration-200",
      "py-2.5 px-6 rounded-2xl font-bold tracking-tight",
      "hover:opacity-85 active:scale-95 shadow-sm hover:shadow-md",
      textColor,
      bgColor,
      fullWidth ? "w-full text-center" : "w-fit",
    ]}
  >
    {label}
  </div>
</a>
