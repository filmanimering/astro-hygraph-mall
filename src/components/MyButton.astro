---
import LinkExternal from "./ikonerSvg/LinkExternal.astro";

interface Props {
  titel: string;
  link: string;
  buttonColor?: string; // "#2563eb"
  buttonTextColor?: string; // "#ffffff"
  solid?: boolean;
  fullWidth?: boolean;
}

const {
  titel,
  link,
  buttonColor = "#2563eb",
  buttonTextColor = "#ffffff",
  solid = false,
  fullWidth = false,
} = Astro.props as Props;

// üîç K√§nn av extern l√§nk
const isExternal = /^https?:\/\//.test(link);

const baseClasses =
  "py-2 px-3 sm:py-3 sm:px-4 rounded-xl text-sm font-semibold focus:outline-none items-center gap-2 transition-all duration-300";
const widthClass = fullWidth ? "w-full flex justify-center" : "inline-flex";
const transparentClass =
  "bg-transparent text-gray-100 border-2 border-white/50 hover:bg-white/10";
---

<a
  href={link}
  target={isExternal ? "_blank" : undefined}
  rel={isExternal ? "noopener noreferrer" : undefined}
  class={`${baseClasses} ${widthClass} ${solid ? "" : transparentClass}`}
  style={solid
    ? `background-color: ${buttonColor}; color: ${buttonTextColor};`
    : undefined}
>
  {titel}
  {isExternal && <LinkExternal />}
</a>
