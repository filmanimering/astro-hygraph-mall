---
// src/components/sections/SectionVideo.astro
const { data } = Astro.props;
const { title, text, video, poster } = data;
---

<section class="max-w-7xl mx-auto py-4">
  <div
    class="bg-purple-950 rounded-3xl shadow-xl border border-slate-100 overflow-hidden"
  >
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 px-4 py-4">
      <div
        class="relative bg-slate-900 rounded-2xl overflow-hidden aspect-video"
      >
        {
          video?.url && (
            <video
              src={video.url}
              poster={poster?.url}
              controls
              preload="none"
              class="w-full h-full object-contain"
            />
          )
        }
      </div>
      <div class="flex flex-col justify-center text-slate-50">
        <h2 class="text-xl font-bold mb-4 uppercase italic">{title}</h2>
        <p class="text-sm leading-relaxed">{text}</p>
      </div>
    </div>
  </div>
</section>
