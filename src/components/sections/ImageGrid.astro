---
const { data } = Astro.props;
---

<section class="max-w-6xl mx-auto px-6 py-12 mb-8">
    {/* mb-8 f√∂r konsekvent marginal */}
    <div class="mb-10 text-center">
        {
            data.title && (
                <h2 class="text-3xl font-bold text-slate-900 mb-4 tracking-tight">
                    {data.title}
                </h2>
            )
        }
        {
            data.description && (
                <p class="text-slate-600 max-w-2xl mx-auto leading-relaxed">
                    {data.description}
                </p>
            )
        }
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
            data.images.map(
                (image: { url: string; width: number; height: number }) => (
                    <div class="group overflow-hidden rounded-2xl border border-slate-100 bg-slate-50 shadow-sm transition-all hover:shadow-md">
                        <img
                            src={image.url}
                            alt={data.title}
                            width={image.width}
                            height={image.height}
                            class="aspect-square w-full object-cover transition-transform duration-500 group-hover:scale-105"
                        />
                    </div>
                ),
            )
        }
    </div>
</section>
