---
const { data } = Astro.props;
---

<section class="max-w-7xl mx-auto px-6 sm:px-8 py-12 mb-8">
    {/* Header */}
    <div class="mb-4 text-center">
        {
            data.title && (
                <h2 class="text-xl md:text-2xl font-black tracking-tight text-slate-900 mb-4 italic uppercase">
                    {data.title}
                </h2>
            )
        }
        {
            data.description && (
                <p class="text-slate-600 max-w-2xl mx-auto leading-relaxed text-lg">
                    {data.description}
                </p>
            )
        }
    </div>

    {/* Masonry Layout med Columns */}
    <div
        class=`columns-1 md:columns-2 lg:columns-${data.numberOfColumns} gap-4 space-y-6`
    >
        {
            data.images.map(
                (image: { url: string; width: number; height: number }) => (
                    <div class="break-inside-avoid group overflow-hidden rounded-2xl border border-slate-100 bg-slate-50 shadow-sm transition-all hover:shadow-xl">
                        <img
                            src={image.url}
                            alt={data.title || "Gallery image"}
                            width={image.width}
                            height={image.height}
                            loading="lazy"
                            class="w-full h-auto object-contain transition-transform duration-700 group-hover:scale-105"
                        />
                    </div>
                ),
            )
        }
    </div>
</section>
