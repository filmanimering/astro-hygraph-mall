---
import MyImage from "../../components/MyImage.astro";
const { data } = Astro.props;
const nrOfCols = data.numberOfColumns || 3;
---

<section class="max-w-7xl mx-auto px-6 sm:px-8 pt-24 pb-20 bg-slate-50">
  {/* Header */}
  <div class="mb-4">
    {
      data.title && (
        <h2 class="text-2xl md:text-4xl tracking-wide mb-4">{data.title}</h2>
      )
    }
    {
      data.description && (
        <p class="max-w-2xl leading-relaxed text-lg">{data.description}</p>
      )
    }
  </div>

  {/* Masonry Layout med Columns */}
  <div
    style={`--cols: ${nrOfCols};`}
    class="mt-8 columns-1 md:columns-2 lg:columns-(--cols) gap-4 space-y-4"
  >
    {
      data.images.map((image: any) => (
        <div class="break-inside-avoid group relative mb-4">
          <MyImage
            src={image.url}
            alt={image.altText || data.title || "Galleri bild"}
            width={image.width}
            height={image.height}
            loading="lazy"
            aspect="auto"
            class="transition-transform duration-700 group-hover:scale-105"
          />

          {/* Text Overlay - Visas vid hover */}
          <div class="absolute inset-0 bg-black/40 flex items-end p-6 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none rounded-2xl">
            <p class="text-white text-base font-bold tracking-wider translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
              {image.altText || data.title}
            </p>
          </div>
        </div>
      ))
    }
  </div>
</section>
