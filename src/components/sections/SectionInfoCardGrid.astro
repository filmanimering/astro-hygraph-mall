---
import MyButton from "../../components/MyButton.astro";
import MyImage from "../../components/MyImage.astro";
const { data } = Astro.props;
const { title, description, cards } = data;
const btnColor = data.btnColor || "#2563eb";
const btnTextColor = data.btnTextColor || "#ffffff";
---

<section class="py-16 shadow-lg bg-[#F1F1F1]">
  <div class="max-w-7xl mx-auto px-4">
    <div class="mt-8 mb-12">
      {
        title && (
          <h2 class="text-3xl lg:text-4xl  font-semibold italic  mb-2 leading-none">
            {title}
          </h2>
        )
      }

      {
        description && (
          <p class=" text-lg  tracking-wide max-w-2xl ">{description}</p>
        )
      }
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {
        cards &&
          cards.map((card: any) => (
            <div class="group flex flex-col bg-slate-50 rounded-3xl  p-4 shadow-xl transition-all hover:shadow-2xl  hover:opacity-95 hover:shadow-gray-400">
              {card.poster?.url && (
                <MyImage
                  src={card.poster.url}
                  alt={card.poster.altText || card.title}
                  width={card.poster.width}
                  height={card.poster.height}
                  class="mb-6 rounded-2xl"
                  aspect="video"
                />
              )}

              <h3 class="text-xl font-bold  mb-3 leading-tight group-hover:text-opacity-70 transition-colors">
                {card.title}
              </h3>

              <p class=" mb-8 leading-relaxed grow text-sm">{card.text}</p>

              <div class="mt-auto">
                {card.buttonLabel && card.buttonLink && (
                  <MyButton
                    link={card.buttonLink}
                    titel={card.buttonLabel}
                    solid={true}
                    buttonDark={true}
                  />
                )}
              </div>
            </div>
          ))
      }
    </div>
  </div>
</section>
