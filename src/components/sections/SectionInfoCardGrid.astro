---
// SectionInfoCardGrid.astro
import MyButton from "../../components/MyButton.astro";
const { data } = Astro.props;
const { title, description, cards } = data;
---

<section class="max-w-7xl mx-auto px-6 py-16">
    <div class="mb-12 text-center">
        {
            title && (
                <h2 class="text-2xl md:text-3xl font-black tracking-tight text-slate-900 italic uppercase mb-4 leading-none">
                    {title}
                </h2>
            )
        }
        {
            description && (
                <p class="text-lg md:text-xl text-slate-600 leading-relaxed">
                    {description}
                </p>
            )
        }
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
            cards &&
                cards.map((card: any) => (
                    <div class="flex flex-col bg-white rounded-3xl border border-slate-100 p-8 shadow-sm transition-all hover:shadow-xl hover:-translate-y-1">
                        {card.poster?.url && (
                            <div class="aspect-video group relative overflow-hidden rounded-2xl border border-slate-100 bg-slate-50 mb-6 shadow-sm">
                                <img
                                    src={card.poster.url}
                                    alt={
                                        card.poster.altText ||
                                        card.title ||
                                        "Kortbild"
                                    }
                                    width={card.poster.width}
                                    height={card.poster.height}
                                    loading="lazy"
                                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                                />
                            </div>
                        )}

                        <h3 class="text-xl font-semibold text-slate-900 mb-3  leading-none">
                            {card.title}
                        </h3>

                        <p class="text-slate-700 mb-4 leading-relaxed grow">
                            {card.text}
                        </p>

                        {card.buttonLabel && card.buttonLink && (
                            <MyButton
                                url={card.buttonLink}
                                label={card.buttonLabel}
                                bgColor="bg-blue-600"
                                textColor="text-white"
                            />
                        )}
                    </div>
                ))
        }
    </div>
</section>
