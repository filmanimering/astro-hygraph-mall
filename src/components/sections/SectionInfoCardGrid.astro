---
// SectionInfoCardGrid.astro
import MyButton from "../../components/MyButton.astro";
import MyImage from "../../components/MyImage.astro";
const { data } = Astro.props;
const { title, description, cards, infoCardLayout, buttonStyle, cardColor } =
  data;

const theCardColor = cardColor.hex || "#6b0184";
---

<section class="pb-12 pt-8">
  <div class="max-w-7xl mx-auto px-4">
    <div class="mb-2">
      {title && <h2 class="text-3xl md:text-4xl font-medium mb-2">{title}</h2>}
      {
        description && (
          <p class="mb-4 max-w-2xl text-slate-600">{description}</p>
        )
      }
    </div>

    {/* FALL 1: Grid (Standard) */}
    {
      (infoCardLayout === "grid" || !infoCardLayout) && (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {cards?.map((card: any, index: number) => (
            <div class="group flex flex-col bg-white rounded-3xl p-6 shadow-xl transition-all hover:shadow-2xl">
              {card.poster?.url && (
                <MyImage
                  src={card.poster.url}
                  alt={card.title || "Card bild"}
                  width={600}
                  height={400}
                  class="mb-6 rounded-2xl"
                  aspect="video"
                  priority={index === 0}
                />
              )}
              <p class=" text-xl font-medium mb-1">{card.title}</p>
              <p class="grow text-sm text-slate-600 mb-3 leading-relaxed">
                {card.text}
              </p>
              <div class="mt-auto">
                {card.buttonLabel && card.buttonLink && (
                  <MyButton
                    link={card.buttonLink}
                    titel={card.buttonLabel}
                    variant={buttonStyle || "primary"}
                    btnColor={theCardColor}
                  />
                )}
              </div>
            </div>
          ))}
        </div>
      )
    }

    {/* FALL 2: List - Optimerad för Tailwind 4 */}
    {
      infoCardLayout === "list" && (
        <div class="mt-12 flex flex-col gap-6 max-w-6xl ">
          {cards?.map((card: any) => (
            <div class="group relative bg-white  rounded-4xl p-8 md:p-10  shadow-xl">
              {/* Accent-linje med Tailwind 4 styling */}
              <div
                class="absolute left-0 top-10 bottom-10 w-1.5 rounded-r-full "
                style={`background-color: ${theCardColor || "var(--color-indigo-600)"};`}
              />

              <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-8">
                {/* Textinnehåll */}
                <div class="flex-1">
                  <h3 class="text-2xl md:text-3xl font-medium text-slate-900 mb-4  tracking-tight">
                    {card.title}
                  </h3>
                  <p class="text-slate-600 text-lg leading-relaxed max-w-2xl">
                    {card.text}
                  </p>
                </div>

                {/* Knapp-del med shrink-0 för att förhindra att knappen kläms */}
                {card.buttonLabel && card.buttonLink && (
                  <div class="shrink-0 pt-1">
                    <MyButton
                      link={card.buttonLink}
                      titel={card.buttonLabel}
                      variant={buttonStyle || "primary"}
                      btnColor={theCardColor}
                    />
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>
      )
    }

    {/* FALL 3: Mini (Kompakt) */}
    {
      infoCardLayout === "mini" && (
        <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {cards?.map((card: any) => (
            <div
              class="bg-white rounded-2xl p-6 shadow-md border-t-4 border-(--card-color) flex flex-col h-full hover:shadow-lg transition-shadow"
              style={`--card-color: ${theCardColor};`}
            >
              <p class=" font-medium text-xl mb-1">{card.title}</p>
              <p class="text-sm text-slate-600 grow mb-2 leading-relaxed">
                {card.text}
              </p>
              {card.buttonLabel && card.buttonLink && (
                <div class="w-fit mt-auto">
                  <MyButton
                    link={card.buttonLink}
                    titel={card.buttonLabel}
                    variant={buttonStyle || "primary"}
                    btnColor={theCardColor}
                  />
                </div>
              )}
            </div>
          ))}
        </div>
      )
    }
  </div>
</section>
