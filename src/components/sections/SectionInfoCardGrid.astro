---
// SectionInfoCardGrid.astro
import MyButton from "../../components/MyButton.astro";
import MyImage from "../../components/MyImage.astro";
const { data } = Astro.props;
const { title, description, cards, infoCardLayout, buttonStyle } = data;
---

<section class="pb-12 pt-8 shadow-lg bg-slate-100">
  <div class="max-w-7xl mx-auto px-4">
    <div class="mb-8">
      {
        title && (
          <h2 class="text-3xl md:text-4xl font-semibold mb-2">{title}</h2>
        )
      }
      {description && <p class="max-w-2xl text-slate-600">{description}</p>}
    </div>

    {/* FALL 1: Grid (Standard) */}
    {
      (infoCardLayout === "grid" || !infoCardLayout) && (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {cards?.map((card: any, index: number) => (
            <div class="group flex flex-col bg-white rounded-3xl p-6 shadow-xl transition-all hover:shadow-2xl hover:-translate-y-1">
              {card.poster?.url && (
                <MyImage
                  src={card.poster.url}
                  alt={card.title}
                  width={600}
                  height={400}
                  class="mb-6 rounded-2xl"
                  aspect="video"
                  priority={index === 0}
                />
              )}
              <h3 class="text-xl font-bold mb-2">{card.title}</h3>
              <p class="grow text-sm text-slate-600 mb-8 leading-relaxed">
                {card.text}
              </p>
              <div class="mt-auto">
                {card.buttonLabel && card.buttonLink && (
                  <MyButton
                    link={card.buttonLink}
                    titel={card.buttonLabel}
                    variant={buttonStyle || "primary"}
                  />
                )}
              </div>
            </div>
          ))}
        </div>
      )
    }

    {/* FALL 2: List (Bild till v√§nster) */}
    {
      infoCardLayout === "list" && (
        <div class="flex flex-col gap-10 max-w-6xl mx-auto">
          {cards?.map((card: any) => (
            <div class="flex flex-col md:flex-row bg-white rounded-3xl overflow-hidden shadow-lg transition-all hover:shadow-xl group">
              {card.poster?.url && (
                <div class="w-full md:w-2/5 shrink-0 overflow-hidden">
                  <MyImage
                    src={card.poster.url}
                    alt={card.title}
                    width={800}
                    height={500}
                    class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
                    aspect="auto"
                  />
                </div>
              )}
              <div class="p-8 md:p-10 flex flex-col justify-center">
                <h3 class="text-2xl font-bold mb-4">{card.title}</h3>
                <p class="text-slate-600 mb-8 leading-relaxed max-w-xl">
                  {card.text}
                </p>
                {card.buttonLabel && card.buttonLink && (
                  <div class="w-fit">
                    <MyButton
                      link={card.buttonLink}
                      titel={card.buttonLabel}
                      variant={buttonStyle || "primary"}
                    />
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>
      )
    }

    {/* FALL 3: Mini (Kompakt) */}
    {
      infoCardLayout === "mini" && (
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {cards?.map((card: any) => (
            <div class="bg-white rounded-2xl p-6 shadow-md border-t-4 border-slate-800 flex flex-col h-full hover:shadow-lg transition-shadow">
              <h3 class="font-bold text-lg mb-3">{card.title}</h3>
              <p class="text-sm text-slate-600 grow mb-6 leading-relaxed">
                {card.text}
              </p>
              {card.buttonLabel && card.buttonLink && (
                <div class="w-fit mt-auto">
                  <MyButton
                    link={card.buttonLink}
                    titel={card.buttonLabel}
                    variant={buttonStyle || "primary"}
                  />
                </div>
              )}
            </div>
          ))}
        </div>
      )
    }
  </div>
</section>
