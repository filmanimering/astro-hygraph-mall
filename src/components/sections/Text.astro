---
// Ingen import av 'marked' behövs längre!
const { data } = Astro.props;
const htmlContent = data.content.html;
---

<section class="mx-auto px-6 pt-12">
    <div
        class="max-w-3xl mx-auto prose prose-slate lg:prose-lg
              prose-headings:font-bold prose-headings:tracking-tight
              prose-p:leading-relaxed prose-p:text-slate-700
              prose-a:text-blue-600 prose-a:no-underline hover:prose-a:underline"
    >
        {/* set:html renderar den färdiga HTML:en från Hygraph */}
        <div set:html={htmlContent} />
    </div>
</section>
