---
import ArrowUp from "./ikonerSvg/ArrowUp.astro";

const today = new Date();
const { settings = {} } = Astro.props;
const { siteName, navigation = [] } = settings;
---

<footer class="w-full border-t border-slate-300 bg-slate-100">
  <div class="max-w-7xl mx-auto px-6 pt-12 pb-12">
    {/* Navigation */}
    <nav class="flex flex-wrap justify-center gap-x-10 gap-y-4 mb-8">
      {
        navigation.map((link: any) => (
          <a
            href={link.url}
            class="text-sm font-medium text-slate-600 hover:text-slate-900 tracking-wide transition-colors duration-200"
          >
            {link.label}
          </a>
        ))
      }
    </nav>

    <div class="flex flex-col items-center gap-4">
      {/* Copyright */}
      <div class="text-center">
        <p class="text-xs text-slate-700 font-medium tracking-widest uppercase">
          &copy; {today.getFullYear()}
          {siteName}
        </p>
      </div>

      {/* Till toppen - Nu mer som ett designelement */}
      <button
        class="mt-1 group flex flex-col items-center text-slate-700 hover:text-slate-900 transition-all duration-300"
        onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
      >
        <div
          class="p-3 rounded-full border border-slate-300 bg-white shadow-sm group-hover:-translate-y-1 group-hover:shadow-md transition-all duration-300"
        >
          <ArrowUp />
        </div>
      </button>
    </div>
  </div>
</footer>
