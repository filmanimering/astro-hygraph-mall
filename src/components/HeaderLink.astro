---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;
const { pathname } = Astro.url;

const isActive = href === pathname || href === pathname.replace(/\/$/, "");
---

<a
  href={href}
  class:list={[
    className,
    "relative px-3 py-2 text-sm font-medium text-slate-800 transition-colors",
    isActive
      ? "text-slate-950 after:absolute after:left-1/2 after:-translate-x-1/2 after:bottom-1 after:h-0.5 after:w-3/4 after:bg-slate-700"
      : "hover:text-slate-500",
  ]}
  {...props}
>
  <slot />
</a>
