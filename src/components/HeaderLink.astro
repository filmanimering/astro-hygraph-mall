---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;
const { pathname } = Astro.url;

const isActive = href === pathname || href === pathname.replace(/\/$/, "");
---

<a
  href={href}
  class:list={[
    className,
    "px-3 py-1.5 text-sm font-medium transition-all rounded-lg",
    // Aktivt läge: Full färg, vit text. Hover gör den bara lite ljusare.
    isActive
      ? "bg-(--brand-primary) text-white shadow-sm hover:opacity-90"
      : "text-slate-950 hover:text-(--brand-primary) hover:bg-(--brand-primary)/5",
  ]}
  {...props}
>
  <slot />
</a>
