---
const { bgUrl } = Astro.props;
---

<div
  class=`prose prose-slate prose-lg max-w-none
   prose-headings:font-bold prose-headings:tracking-tight
prose-p:leading-relaxed prose-p:text-slate-600 prose-a:text-blue-600 prose-a:underline hover:prose-a:no-underline prose-a:transition-colors
 prose-blockquote:border-l-blue-600 prose-blockquote:bg-blue-50/50 prose-blockquote:text-slate-800
   prose-code:bg-slate-100 prose-code:px-1 prose-code:py-0.5 prose-code:rounded prose-code:text-sm
    prose-pre:bg-slate-900 prose-pre:text-slate-100 prose-pre:rounded-lg prose-pre:shadow-lg prose-pre:overflow-x-auto ${bgUrl ? "prose-invert" : "prose-slate"}`
>
  <slot />
</div>
