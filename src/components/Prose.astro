---
/* Prose.astro */
---

<div
  class:list={[
    /* --- BAS-STYLING (Typography plugin) --- */
    "prose prose-slate prose-lg max-w-none",

    /* --- GLOBAL AVSTÅNDS-FIX --- */
    "prose-headings:mt-6 prose-headings:mb-2",
    "prose-p:my-3",
    "prose-li:my-0.5",
    "prose-ul:my-2",
    "prose-ol:my-2",

    /* --- LISTOR (Brand Color & Läsbarhet) --- */
    /* Gör själva punkterna/siffrorna i brand-color */
    "prose-ol:marker:text-(--brand-primary)",
    "prose-ul:marker:text-(--brand-primary)",
    /* Säkerställer att list-texten är mörk och tydlig */
    "prose-li:text-slate-700",

    /* --- RUBRIKER (Responsiv storlek & Brand-känsla) --- */
    "prose-h1:text-3xl prose-h1:md:text-4xl",
    "prose-h2:text-2xl prose-h2:md:text-3xl",
    "prose-h3:text-xl prose-h3:md:text-2xl",
    "prose-h4:text-lg prose-h4:md:text-xl",
    "prose-h5:text-md prose-h5:md:text-lg",
    "prose-headings:font-semibold prose-headings:tracking-tight",

    /* --- BRÖDTEXT --- */
    "prose-p:leading-relaxed prose-p:text-slate-600",

    /* --- LÄNKAR --- */
    "prose-a:text-(--brand-text)",
    "prose-a:underline",
    "prose-a:transition-colors",
    "prose-a:hover:text-(--brand-primary)",

    /* --- CITAT (Blockquotes) --- */
    "prose-blockquote:border-l-(--brand-primary)",
    "prose-blockquote:bg-(--brand-primary)/5",
    "prose-blockquote:text-slate-800",
    "prose-blockquote:font-medium",
    "prose-blockquote:my-4",

    /* --- RESPONSIV VIDEO-FIX --- */
    /* w-full tvingar den att strunta i "500px" och bli 100% bred */
    "prose-iframe:w-full",
    /* aspect-video ser till att höjden anpassas efter bredden (16:9) */
    "prose-iframe:aspect-video",
    "prose-iframe:rounded-xl",
    "prose-iframe:my-8",
    "prose-iframe:shadow-md",

    /* ---- KOD-BLOCK ---- */
    "prose-code:bg-slate-100 prose-code:px-1 prose-code:py-0.5 prose-code:rounded prose-code:text-sm",
    "prose-pre:bg-slate-900 prose-pre:text-slate-100 prose-pre:rounded-lg prose-pre:shadow-lg",
  ]}
>
  <slot />
</div>

<style is:global>
  /* Detta tvingar ALLA iframes inuti .prose att bli responsiva */
  .prose iframe {
    width: 100% !important;
    max-width: 100% !important;
    height: auto !important;
    aspect-ratio: 16 / 9 !important;
  }
</style>
